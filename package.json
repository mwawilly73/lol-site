{
  "name": "lol-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "next lint",
    "predeploy": "node scripts/predeploy.mjs --reserve-3000",
    "predeploy:fast": "node scripts/predeploy.mjs --reserve-3000 --no-lighthouse",
    "audit:lh": "node scripts/predeploy.mjs --lighthouse-only --reserve-3000",
    "prod:local": "npm run stop:3000 && npm run build && npm run start",
    "stop:port": "node scripts/kill-port.mjs",
    "stop:3000": "node scripts/kill-port.mjs 3000",
    "stop:3001": "node scripts/kill-port.mjs 3001",
    "build:prod": "NODE_ENV=production next build",
    "serve:prod": "NODE_ENV=production next start -p 3001",
    "audit": "npm run build:prod && lhci autorun --config=./lighthouserc.js",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@vercel/speed-insights": "^1.2.0",
    "next": "15.4.7",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "chrome-launcher": "^1.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.7",
    "lighthouse": "^12.8.1",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "^5"
  }
}
